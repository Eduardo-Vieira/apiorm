#!/usr/bin/env node

/**
 * Copy files for projetc
 * 
 */
var fs = require('fs-extra');
var path = require('path');

var modules = __dirname+'/../node_modules/';
var assets =  __dirname+'/../public/assets/';

console.log('Modules Files');

// arquivo que ser√£o copiados
var files = [
             {origin:'jquery/dist/jquery.min.js',dir:'jquery/jquery.min.js'},
             {origin:'bootstrap/dist/css/bootstrap.min.css',dir:'bootstrap/bootstrap.min.css'},
             {origin:'bootstrap/dist/js/bootstrap.min.js',dir:'bootstrap/bootstrap.min.js'},
            ];

//copy files
files.forEach(function(file){
    fs.copySync(path.resolve(modules,file.origin), path.resolve(assets,file.dir));
});